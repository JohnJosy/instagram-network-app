<div class="row p-2">
    <div class="col-md-3">{{!-- Colonna da 3 - DATI PROFILO--}}
        <div class="card ">
            <img src="{{user.profile_picture}}" alt="{{user.full_name}}" class="card-img-top">
            <hr>
            <div class="card-body">
                <h5 class="card-title p-2">{{user.full_name}}</h5>
                <p class="p-2"><strong>{{user.username}}</strong></p>
                <p class="p-2">{{user.bio}}</p>
                <hr>
                {{user.counts.media}} <i class="fas fa-camera-retro"></i> 
                {{user.counts.follows}} <i class="fas fa-heart"></i>
                {{user.counts.followed_by}} <i class="fas fa-users"></i>
            </div>
            <div class="card-footer">
                <a href="{{user.website}}" target="_blank" class="btn btn-light btn-block">Network Service</a> 
            </div>
        </div>
    </div>
    <div class="col-md-9"> {{!-- Colonna da 9 --}}
        <div class="row">
            {{#each posts}}
                <div class="col-md-4">
                    <div class="card mb-2">
                        <img src="{{images.thumbnail.url}}" alt="">
                        <div class="card-body">
                           {{caption.text}}
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>